  <!--Project detail-->
  <name>Quadraturin</name>
  <modelVersion>4.0.0</modelVersion>
  <artifactId>quadraturin</artifactId>
  <groupId>dve.yarangi.graphics</groupId>
  <version>0.0.1</version>
