	<dependencies>
	  <dependency>
		<groupId>javax.xml.bind</groupId>
		<artifactId>jaxb-api</artifactId>
		<version>2.0</version>
	  </dependency>
	  <dependency>
		<groupId>net.java.dev.jogl</groupId>
		<artifactId>jogl-windows-i586</artifactId>
		<version>1.1.1-rc6</version>
	  </dependency>

      <dependency>
        <groupId>log4j</groupId>
